
@{
    ViewBag.Title = "_LoginPartial";
}


<ul class="navbar-nav my-2 my-lg-0 ">

    @if (Request.IsAuthenticated)
    {
        //kullanıcı login olmuş ise
        //kullanıcı adını ve logout linkleri çıkar
        <li class="nav-item active">
            
            <a class="nav-link btn btn-default" href="/Account">
            <i class="fas fa-user-circle" style="font-size:24px"></i>  @User.Identity.Name</a>  
        </li>
        <li class="nav-item active ml-3">
            <a class="nav-link btn btn-danger btn-sm" href="/Account/Logout">Çıkış <span class="sr-only">(current)</span></a>
        </li>

    }
    else
    {
        //kullanıcı login olmamıştır.
        //login ve Register linkleri çıkar
        <li class="nav-item active">
            <a class="nav-link btn btn-warning btn-sm" href="/Account/Login">Giriş <span class="sr-only">(current)</span></a>  
        </li> 
        <li class="nav-item active ml-3">
            <a class="nav-link btn btn-success btn-sm" href="/Account/Register">Kayıt Ol <span class="sr-only">(current)</span></a>
        </li>

    }
</ul>

