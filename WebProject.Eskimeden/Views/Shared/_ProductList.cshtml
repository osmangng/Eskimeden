@using WebProject.Eskimeden.Models;
@model IEnumerable<ProductModel>
<div class="row">

    @foreach (var urun in Model)
    {
        <div class="col-md-4 mb-3">
            <div class="card">
                <p style="text-align:center;"><img class="card-img-top" src="~/Upload/@urun.Image" alt="@urun.Name"/></p>
                <div class="card-body">
                    <h5 class="card-title"><a href="/Home/Details/@urun.Id">@urun.Name</a></h5>
                    <p class="card-text pt-1 description">@urun.Description</p>
                </div>
                <div class="card-footer">
                    <small class="text-muted product-price"><i class="fas fa-lira-sign"></i> @urun.Price </small>
                </div>
                <a href="/Home/Details/@urun.Id" class="btn btn-primary btn-sm float-right">
                    <i class="fa fa-angle-double-right"></i>Ürünü İncele
                </a>
            </div>
        </div>

    }



</div>