@using WebProject.Eskimeden.Models
@model ShippingDetails
@{
    ViewBag.Title = "Checkout";
}
<style>
    .field-validation-error{color:#f00;}
    .field-validation-error{display:none}
    .field-validation-error{border:1px solid #f00;background-color:#fee}
    .validation-summary-errors{font-weight:bold;color:#f00}
    .validation-summary-valid{display:none;}
</style>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2>Sipariş bilgileriniz.</h2>
            <p class="alert alert-danger">Lütfen kargonuzun güvenliği için adres bilgilerinizi doğru doldurunuz</p>
            <hr />

            @using (Html.BeginForm())
            {
            @Html.ValidationSummary()

                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Ad Soyad</label>
                    <div class="col-sm-6">
                       <span class="badge badge-danger">
                           @User.Identity.Name
                       </span>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Adres:</label>
                    <div class="col-sm-6">
                        @Html.TextBoxFor(x => x.Adres, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Adres Başlığı:</label>
                    <div class="col-sm-6">
                        @Html.TextBoxFor(x => x.AdresBasligi, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Şehir:</label>
                    <div class="col-sm-6">
                        @Html.TextBoxFor(x => x.Sehir, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Semt Adı:</label>
                    <div class="col-sm-6">
                        @Html.TextBoxFor(x => x.Semt, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Mahalle</label>
                    <div class="col-sm-6">
                        @Html.TextBoxFor(x => x.Mahalle, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Posta Kodu</label>
                    <div class="col-sm-6">
                        @Html.TextBoxFor(x => x.PostaKodu, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-sm-10">
                        <button type="submit" class="btn btn-primary">Devam Et</button>
                    </div>
                </div>
            }


        </div>
    </div>
</div>

